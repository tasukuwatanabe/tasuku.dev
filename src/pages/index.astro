---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection, type CollectionEntry } from 'astro:content';
import ArticleCard from '../components/ArticleCard.astro';
import { getBlogUrl } from '../utils/slug';

interface QiitaArticle {
	title: string;
	url: string;
	created_at: string;
	updated_at: string;
	user_id: string;
	user_icon: string;
	tags: string[];
	likes_count: number;
	ogImage?: string | null;
	body: string;
}

type ArticleItem = {
	type: 'blog';
	title: string;
	description: string;
	pubDate: Date;
	url: string;
	post: CollectionEntry<'blog'>;
};

const posts = await getCollection('blog');

// Combine all blog posts into one section
const allBlogItems: ArticleItem[] = posts.map(post => ({
	type: 'blog' as const,
	title: post.data.title,
	description: post.data.description,
	pubDate: post.data.pubDate,
	url: getBlogUrl(post.id),
	post
})).sort((a, b) => b.pubDate.getTime() - a.pubDate.getTime());

// Import Qiita articles from the JSON file
import qiitaArticlesData from '../data/qiita-articles.json';
const qiitaArticles: QiitaArticle[] = qiitaArticlesData;
---

<!doctype html>
<html lang="ja" class="h-full">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="max-w-6xl mx-auto px-4 flex-grow">
			<!-- Blog Section -->
			<section class="mb-16">
				<h2 class="text-2xl font-bold mb-8 text-gray-800 border-b border-gray-200 pb-4">Blog</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{allBlogItems.map((item) => (
						<ArticleCard
							title={item.title}
							url={item.url}
							date={item.pubDate}
						/>
					))}
				</div>
			</section>

			<!-- Qiita Section -->
			<section class="mb-16">
				<h2 class="text-2xl font-bold mb-8 text-gray-800 border-b border-gray-200 pb-4">Qiita</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{qiitaArticles.map((article) => (
						<ArticleCard
							title={article.title}
							url={article.url}
							date={article.created_at}
							thumbnail={article.ogImage}
							external={true}
						/>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>


