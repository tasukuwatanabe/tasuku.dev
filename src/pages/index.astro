---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import GradientThumbnail from '../components/GradientThumbnail.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="max-w-4xl mx-auto px-4 flex-grow">
			<section>
				<ul class="list-none m-0 p-0 space-y-4">
					{
						posts.map((post) => (
							<li class="w-full">
								<a href={`/blog/${post.id}/`} class="flex items-stretch gap-4 p-4 no-underline transition-all duration-200 hover:bg-gray-50 rounded-lg h-32">
									<GradientThumbnail 
										title={post.data.title} 
										class="w-40 h-25 flex-shrink-0"
									/>
									<div class="flex-grow flex flex-col justify-center">
										<h4 class="title m-0 text-black leading-tight text-lg hover:text-accent">{post.data.title}</h4>
										<p class="date m-0 text-gray-500 text-sm mt-2">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
